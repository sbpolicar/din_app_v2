<div class="col-sm-offset-4 col-sm-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Sign Up</h3>
    </div>
    <div class="panel-body">
      <%= bootstrap_form_for @user do |f| %>
        <%= f.text_field :email %>
        <%= f.text_field :name %>
        <%= f.password_field :password %>
        <%= f.primary "Join Now" %>
      <% end %>
    </div>
  </div>
</div>